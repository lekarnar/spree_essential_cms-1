<%= render :partial => 'spree/admin/shared/page_tabs', :locals => {:current => "Images"} %>

<% if @page_image.try(:errors).present? %>
  <%= render 'spree/shared/error_messages', :target => @page_image %>
<% end %>

<%= form_for([:admin, @page.id, @page_image], :url => admin_page_image_url(@page, @page_image), :html => { :multipart => true }) do |f| %>
  <div style="margin-top:25px; margin-bottom:25px;">
    <p>
      <%= label_tag Spree.t("thumbnail") %>:<br/>
      <%= link_to(image_tag(@page_image.attachment.url(:mini)), @page_image.attachment.url(:product)) %>
    </p>
    <%= render "form", :form => f %>
  </div>
  <p class="form-buttons">
    <%= button Spree.t("update") %>
    or <%= link_to Spree.t("cancel"), admin_page_images_url(@page), :id => "cancel_link", class: 'btn btn-danger' %>
  </p>
<% end %>
